                    {{this}}
                </button>
                <button class="bi bi-x-lg input-group-text bla_bla" id="remove_{{this}}_btn" onclick="delete_category('{{this}}')"></button>
            </div>
            {{/each}}

            {{#if category.empty}}
            <div class="input-group justify-content-center mx-2 my-2 category_translate">
                <button type="button" id="b1st" class="btn btn-outline-secondary">
                    Daily Expense
                </button>
                <i class="bi bi-x-lg input-group-text bla_bla"></i>
            </div>
