        <div class="input-group mb-3 mt-3">
            <input type="text" class="form-control" id="add_catagory_input" placeholder="Add Catagory"
                aria-label="Add Catagory" aria-describedby="add_catagory">
            <button class="btn btn-success" type="button" id="add_catagory_btn">Add</button>
        </div>
    </div>

    <div class="col-md-9 expenses text-center ms-4">
        <div class="for_Scroll_category_trans py-4" style="height: 565px;">
            <div class="expense-body" id="trans_category_body">

                {{#if trans.empty}}
                <div class="card mx-2 my-3 recent_shadow"
                    style="background-image: linear-gradient(to right,#dad8d8,white,#dad8d8);">
                    <div class="row text-center mx-2">
                        <div class="text-center">
                            <a><b>Description:</b></a>
                            <a>This is to describe your transaction.</a>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-auto">
                            <a><b>Catagory:</b></a>
                            <a>Your transaction category</a>
                        </div>
                        <div class="col-auto">
                            <a><b>Date:</b></a>
                            <a style="color: #a2a396;">dd-mm-yyyy</a>
                        </div>
                        <div class="col-auto">
                            <a><b>Amount:</b></a>
                            <a style="color: red;">-9999</a>
                        </div>
                    </div>
                </div>
                {{/if}}

                {{#each trans}}
                <div class="card mx-2 my-3 recent_shadow"
                    style="background-image: linear-gradient(to right,#dad8d8,white,#dad8d8);">
                    <div class="row text-center mx-2">
                        <div class="text-center">
                            <a><b>Description:</b></a>
                            <a>{{this.description}}</a>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-auto">
                            <a><b>Catagory:</b></a>
                            <a>{{this.category}}</a>
                        </div>
                        <div class="col-auto">
                            <a><b>Date:</b></a>
                            <a style="color: #a2a396">{{this.date}}</a>
                        </div>
                        <div class="col-auto">
                            <a><b>Amount:</b></a>
                            {{#if (eq this.type "Received")}}
                            <a style="color: rgb(3, 188, 3);">+{{this.amount}}</a>
                            {{else if (eq this.type "Paid")}}
                            <a style="color: red;">{{this.amount}}</a>
                            {{/if}}
                        </div>
                    </div>
                </div>

                {{/each}}
            </div>
            <div>
